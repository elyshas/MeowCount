<resources>

<!-- Base application theme. -->
<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Sets color of app bar -->
    <item name="colorPrimary">#9C27B0</item>
</style>

<!-- Cat Titles style -->
<style name="catName">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:gravity">center</item>
    <item name="android:padding">12dp</item>
    <item name="android:layout_marginTop">10dp</item>
    <item name="android:textAllCaps">true</item>
    <item name="android:fontFamily">@font/pressstart2p_regular</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textColor">#FFF</item>
    <item name="android:textSize">26sp</item>
</style>

<!-- Score Counter style -->
<style name="scores">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginBottom">10dp</item>
    <item name="android:gravity">center</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">45sp</item>
    <item name="android:textColor">#9C27B0</item>
    <item name="android:fontFamily">@font/pressstart2p_regular</item>
    <item name="android:shadowColor">#E1BEE7</item>
    <item name="android:shadowDx">7</item>
    <item name="android:shadowDy">11</item>
    <item name="android:shadowRadius">8</item>
</style>

<!-- Increment +1 Buttons style -->
<style name="increment1Buttons">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginRight">30dp</item>
    <item name="android:layout_marginBottom">10dp</item>
    <item name="android:layout_marginLeft">30dp</item>
    <item name="android:backgroundTint">#FF80AB</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">#FFF</item>
</style>

<!-- Increment +3 Buttons style -->
<style name="increment3Buttons">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginRight">30dp</item>
    <item name="android:layout_marginBottom">10dp</item>
    <item name="android:layout_marginLeft">30dp</item>
    <item name="android:backgroundTint">#EC407A</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">#FFF</item>
</style>

<!-- Decrement Buttons style -->
<style name="decrementButtons">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_marginRight">30dp</item>
    <item name="android:layout_marginLeft">30dp</item>
    <item name="android:backgroundTint">#FFF</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">#EC407A</item>
</style>

<!-- Reset Button style -->
<style name="resetButton">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_alignParentBottom">true</item>
    <item name="android:layout_centerHorizontal">true</item>
    <item name="android:paddingLeft">25dp</item>
    <item name="android:paddingRight">25dp</item>
    <item name="android:layout_marginTop">20dp</item>
    <item name="android:backgroundTint">#9C27B0</item>
    <item name="android:textColor">#FFF</item>
    <item name="android:textSize">20sp</item>
</style>

</resources>
